<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Hutech</title>
    <link rel="stylesheet" href="./style.css">
    <link rel="icon" href="/images/logo.png" type="image/png">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Arimo:wght@700&family=Heebo:wght@400;900&family=Kodchasan:ital@1&family=Mulish:wght@200;300&family=Quicksand&display=swap"
        rel="stylesheet">
</head>

<body>
    <%- include('component/header',{flag,user,image:"/todo/"+image}) %>


        <div id="task">

            <div id="checkbox">
                <h2>Todo List</h2>
                <table id="list">

                    <!-- <tr><td><input type="checkbox" name="packersOff" id="packers" class="packers" value="1"/>
                    <label for="packers" class="strikethrough">sssssssss</label></td>
                    <td><button id="delete" value="delete">X</button></td>
                </tr> -->

                    <% for(var i=0;i<todos.length;i++) { %>
                                <tr>
                                    <td>
                                        <% if(todos[i].completed) { %>
                                            <input type="checkbox" name="packersOff" id="packers" class="packers"
                                                value="<%= todos[i].text %>" checked />
                                            <% } else { %>
                                                <input type="checkbox" name="packersOff" id="packers" class="packers"
                                                    value="<%= todos[i].text %>" />
                                                <% } %>
                                                    <label for="packers" class="strikethrough">
                                                        <%= todos[i].text %>
                                                    </label>
                                    </td>
                                    <td><img id="todo-img" name="<%= todos[i].text %>"
                                            src="<%=todos[i].image%>" width="20" height="20" />
                                    </td>
                                    <td><button id="delete" value="<%= todos[i].text %>"><img id="rmv"
                                                name="<%= todos[i].text %>" src="/images/bin.png" width="20"
                                                height="20" /></button></td>
                                </tr>
                                <% } %>
                </table>
            </div>
            <div id="todo-form">
                <h2>What's Left?</h2>
                <form id="type" method="POST" enctype="multipart/form-data">

                    <input type="text" name="text" id="fname" placeholder="I need to ..." style="text-align: left;">
                    <input type="file" name="photo" id="fotu" required style="margin: 10% 0 10% 0;">
                    <button id="add" value="add" class="btn btn-secondary btn-sm">Add</button>
                    </td>
                </form>
            </div>
        </div>

        <script src="./sc.js"></script>
</body>

</html>